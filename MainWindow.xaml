<Window x:Class="LazyMigrate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LazyMigrate" 
        Height="600" 
        Width="1000"
        Icon="Img/ramolossgalar.png" >
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="Img\ramolossgalar.png" Margin="443,0,452,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="0"
                   Text="LazyMigrate" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left"
                   Margin="426,50,0,0" Width="139" Height="32" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,20" Width="870">
            <Button Content="Scanner les logiciels" 
                    Command="{Binding StartScanCommand}"
                    Padding="20,10"
                    Margin="10"
                    FontSize="14"/>

            <Button Content="Arrêter" 
                    Command="{Binding StopScanCommand}"
                    Padding="20,10"
                    Margin="10"
                    FontSize="14"/>

            <Button Content="☑ Tout sélectionner" 
                    Command="{Binding SelectAllCommand}"
                    Padding="15,10"
                    Margin="10"
                    FontSize="12"/>

            <Button Content="☐ Tout désélectionner" 
                    Command="{Binding UnselectAllCommand}"
                    Padding="15,10"
                    Margin="10"
                    FontSize="12"/>

            <Button Content="💾 Exporter la sélection" 
                    Command="{Binding ExportCommand}"
                    Padding="20,10"
                    Margin="10"
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"/>

            <TextBlock Text="{Binding ScanStatus}" 
                       VerticalAlignment="Center"
                       Margin="20,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding SoftwareList}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended"
                  Margin="20,20,20,20">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Export" 
                                        Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="60"/>
                <DataGridTextColumn Header="Nom" 
                                    Binding="{Binding Name}" 
                                    Width="300"/>
                <DataGridTextColumn Header="Éditeur" 
                                    Binding="{Binding Publisher}" 
                                    Width="200"/>
                <DataGridTextColumn Header="Version" 
                                    Binding="{Binding Version}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Catégorie" 
                                    Binding="{Binding Category}" 
                                    Width="120"/>
                <DataGridCheckBoxColumn Header="Settings" 
                                        Binding="{Binding IncludeSettings, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="80"/>
                <DataGridTextColumn Header="Taille" 
                                    Binding="{Binding EstimatedSizeFormatted}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Date d'installation" 
                                    Binding="{Binding InstallDate, StringFormat=dd/MM/yyyy}" 
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20" Width="160">
            <TextBlock Text="Logiciels sélectionnés:" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding SelectedCount}" Margin="5,0" FontWeight="Bold" Foreground="Blue" VerticalAlignment="Center"/>
            <TextBlock Text="/" Margin="5,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalFound}" Margin="5,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>