<Window x:Class="LazyMigrate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LazyMigrate" 
        Height="700" 
        Width="1200"
        MinHeight="500"
        MinWidth="800"
        Icon="Img/ramolossgalar.png"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header - Image superposée au texte -->
        <Grid Grid.Row="0" 
              HorizontalAlignment="Center" 
              Margin="0,20,0,20">
            <!-- Texte en arrière-plan -->
            <TextBlock Text="LazyMigrate" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <!-- Image par-dessus le texte -->
            <Image Source="Img\ramolossgalar.png" 
                   Width="62" 
                   Height="62"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="34,-27,0,0"/>
        </Grid>

        <!-- Barre d'outils - ScrollViewer pour éviter le débordement -->
        <Border Grid.Row="1" 
                Background="#2D2D30"
                Margin="0,0,0,20">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="20,15,20,15">

                    <Button Content="🔍 Scanner" 
                            Command="{Binding StartScanCommand}"
                            Background="#2D2D30"
                            Foreground="White"
                            BorderBrush="#3F3F46"
                            Padding="15,8"
                            Margin="5"
                            FontSize="13"
                            MinWidth="100"/>

                    <Button Content="⏹ Arrêter" 
                            Command="{Binding StopScanCommand}"
                            Background="#2D2D30"
                            Foreground="White"
                            BorderBrush="#3F3F46"
                            Padding="15,8"
                            Margin="5"
                            FontSize="13"
                            MinWidth="80"/>

                    <Button Content="☑ Tout" 
                            Command="{Binding SelectAllCommand}"
                            Background="#2D2D30"
                            Foreground="White"
                            BorderBrush="#3F3F46"
                            Padding="12,8"
                            Margin="5"
                            FontSize="12"
                            MinWidth="60"/>

                    <Button Content="☐ Rien" 
                            Command="{Binding UnselectAllCommand}"
                            Background="#2D2D30"
                            Foreground="White"
                            BorderBrush="#3F3F46"
                            Padding="12,8"
                            Margin="5"
                            FontSize="12"
                            MinWidth="60"/>

                    <Button Content="💾 Exporter" 
                            Command="{Binding ExportCommand}"
                            Padding="15,8"
                            Margin="5"
                            FontSize="13"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderBrush="#4CAF50"
                            MinWidth="100"/>

                    <Button Content="📥 Télécharger" 
                            Command="{Binding DownloadCommand}"
                            Padding="15,8"
                            Margin="5"
                            FontSize="13"
                            Background="#2196F3"
                            Foreground="White"
                            BorderBrush="#2196F3"
                            MinWidth="100"/>
                    <Button Content="🔍 Chercher téléchargements" 
                     Command="{Binding SearchDownloadsCommand}"
                              Padding="15,8"
                              Margin="5"
                              FontSize="13"
                            Background="OrangeRed"
                            Foreground="White"
                            BorderBrush="OrangeRed"/>
                    <!-- Status ultra-simple sans convertisseurs -->
                    <Border Background="#383838" 
                            CornerRadius="3"
                            Padding="10,5"
                            Margin="10,0"
                            MinWidth="300"
                            MaxWidth="400">
                        <StackPanel>
                            <!-- Status principal -->
                            <TextBlock Text="{Binding ScanStatus}" 
                                       VerticalAlignment="Center"
                                       Foreground="#CCCCCC"
                                       FontSize="12"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"/>

                            <!-- Barre de progression simple -->
                            <ProgressBar Value="{Binding ScanProgress}" 
                                         Height="4" 
                                         Margin="0,4,0,0"
                                         Background="#2D2D30"
                                         Foreground="#2196F3"
                                         Minimum="0"
                                         Maximum="100"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- DataGrid avec colonnes responsive -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding SoftwareList}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended"
                  Background="#2D2D30"
                  Foreground="White"
                  BorderBrush="#3F3F46"
                  RowBackground="#2D2D30"
                  AlternatingRowBackground="#252526"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#3F3F46"
                  HeadersVisibility="Column"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  Margin="20,0,20,20">

            <!-- Style des headers -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#383838"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#3F3F46"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="8,8"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Style des cellules -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{TemplateBinding Background}" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#0078D4"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="✓" 
                                        Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="40"
                                        MinWidth="40"/>

                <DataGridTextColumn Header="Nom du logiciel" 
                                    Binding="{Binding Name}" 
                                    Width="2*"
                                    MinWidth="200"/>

                <DataGridTextColumn Header="Éditeur" 
                                    Binding="{Binding Publisher}" 
                                    Width="1.5*"
                                    MinWidth="120"/>

                <DataGridTextColumn Header="Version" 
                                    Binding="{Binding Version}" 
                                    Width="80"
                                    MinWidth="80"/>

                <DataGridTextColumn Header="Catégorie" 
                                    Binding="{Binding Category}" 
                                    Width="100"
                                    MinWidth="100"/>

                <DataGridCheckBoxColumn Header="⚙" 
                                        Binding="{Binding IncludeSettings, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="40"
                                        MinWidth="40"/>

                <DataGridTemplateColumn Header="Settings" Width="80" MinWidth="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}">
                                        <Binding Path="SettingsPaths.Count"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SettingsPaths.Count}" Value="0">
                                                <Setter Property="Text" Value="❌ Aucun"/>
                                                <Setter Property="Foreground" Value="#FF6B6B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Text" Value="{Binding SettingsPaths.Count, StringFormat='✅ {0}'}"/>
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Taille" 
                                    Binding="{Binding EstimatedSizeFormatted}" 
                                    Width="80"
                                    MinWidth="80"/>

                <DataGridTextColumn Header="Installation" 
                                    Binding="{Binding InstallDate, StringFormat=dd/MM/yyyy}" 
                                    Width="100"
                                    MinWidth="100"/>
                <DataGridTextColumn Header="📥 Download" 
                    Binding="{Binding DownloadStatusText}" 
                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status bar -->
        <Border Grid.Row="3" 
                Background="#2D2D30" 
                BorderBrush="#3F3F46" 
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Compteur centré -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="Sélectionnés:" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedCount}" 
                               Margin="8,0,4,0" 
                               FontWeight="Bold" 
                               Foreground="#4CAF50" 
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="/" 
                               Margin="0" 
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalFound}" 
                               Margin="4,0,8,0" 
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="logiciels" 
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Info supplémentaire à droite -->
                <TextBlock Grid.Column="2"
                           Text="{Binding ScanStatus}" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Foreground="#888888"
                           FontSize="11"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>
    </Grid>
</Window>