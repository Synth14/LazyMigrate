<Window x:Class="LazyMigrate.Views.DownloadSummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Résumé des téléchargements - LazyMigrate" 
        Height="500" 
        Width="600"
        MinHeight="400"
        MinWidth="500"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#2D2D30" 
                Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🎉" 
                           FontSize="24" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Téléchargements terminés !" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock x:Name="SummaryHeader" 
                               FontSize="12" 
                               Foreground="#CCCCCC"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1" 
                      Margin="20"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <TextBlock x:Name="SummaryContent"
                       FontFamily="Consolas, Courier New, monospace"
                       FontSize="12"
                       Foreground="#CCCCCC"
                       Background="#252526"
                       Padding="15"
                       TextWrapping="Wrap"
                       LineHeight="18"/>
        </ScrollViewer>

        <!-- Boutons d'action -->
        <Border Grid.Row="2" 
                Background="#2D2D30" 
                BorderBrush="#3F3F46" 
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">

                <Button x:Name="OpenFolderButton"
                        Content="📂 Ouvrir le dossier"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="#4CAF50"
                        Padding="15,8"
                        Margin="0,0,10,0"
                        FontSize="13"
                        Click="OpenFolderButton_Click"/>

                <Button x:Name="CopyLogButton"
                        Content="📋 Copier le log"
                        Background="#2D2D30"
                        Foreground="White"
                        BorderBrush="#3F3F46"
                        Padding="15,8"
                        Margin="0,0,10,0"
                        FontSize="13"
                        Click="CopyLogButton_Click"/>

                <Button Content="✅ OK"
                        Background="#2196F3"
                        Foreground="White"
                        BorderBrush="#2196F3"
                        Padding="20,8"
                        FontSize="13"
                        IsDefault="True"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>